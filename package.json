{
  "name": "monkey-lang-vscode-plug-in",
  "displayName": "monkey-lang-vscode-plug-in",
  "description": "monkey-lang-vscode-plug-in",
  "version": "1.3.0",
  "type": "module",
  "engines": {
    "vscode": "^1.80.0",
    "monkey-js-interpreter": "^1.0.1"
  },
  "main": "./out/index.js",
  "scripts": {
    "compile": "tsc -p .",
    "watch": "tsc -w",
    "test": "node ./out/test/run.js"
  },
  "publisher": "xygodcyx",
  "icon": "./icons/monkey.png",
  "repository": {
    "url": "https://github.com/xygodcyx/monkey-lang-vscode-plug-in"
  },
  "license": "MIT",
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onCommand:monkey.runFile",
    "onCommand:monkey.checkDependencies",
    "onLanguage:monkey"
  ],
  "contributes": {
    "commands": [
      {
        "command": "monkey.runFile",
        "title": "Monkey: Run Monkey Script"
      },
      {
        "command": "monkey.checkDependencies",
        "title": "Monkey: Check Dependencies"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "monkey.runFile",
          "when": "resourceLangId == monkey",
          "group": "navigation"
        }
      ]
    },
    "languages": [
      {
        "id": "monkey",
        "aliases": [
          "Monkey",
          "monkey"
        ],
        "extensions": [
          ".mky"
        ],
        "icon": {
          "light": "./icons/monkey-light.png",
          "dark": "./icons/monkey-dark.png"
        },
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "monkey",
        "scopeName": "source.monkey",
        "path": "./syntaxes/monkey.tmLanguage.json"
      }
    ]
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1",
    "vscode-languageserver": "^9.0.1",
    "vscode-languageserver-textdocument": "^1.0.12"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "@types/vscode": "^1.106.0",
    "@vscode/vsce": "^3.7.0",
    "typescript": "^5.9.3"
  }
}
