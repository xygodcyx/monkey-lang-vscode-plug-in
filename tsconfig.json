        "module": "node16",
        "target": "ES2020",
        "lib": [
            "ES2020"
        ],
        "rootDir": "src",
        "outDir": "out",
        "strict": true,
        "sourceMap": true,
        "moduleResolution": "node16",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "typeRoots": [
            "node_modules/@types"
